@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Bienvenido</h1>
        <p class="lead">Selecciona una sección para comenzar</p>
    </div>

    <div class="row justify-content-center">
        <!-- Productos -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Productos</h5>
                    <p class="card-text">Gestión de productos y sus materiales.</p>
                    <a class="btn btn-outline-primary w-100" asp-controller="Home" asp-action="Productos">Ir a Productos</a>
                </div>
            </div>
        </div>

        <!-- Fórmula -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Fórmula</h5>
                    <p class="card-text">Crear y administrar fórmulas químicas.</p>
                    <a class="btn btn-outline-success w-100" asp-controller="Home" asp-action="Formula">Ir a Fórmula</a>
                </div>
            </div>
        </div>

        <!-- Usuarios -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Usuarios</h5>
                    <p class="card-text">Administración de cuentas de usuario.</p>
                    <a class="btn btn-outline-dark w-100" asp-controller="Home" asp-action="Usuarios">Ir a Usuarios</a>
                </div>
            </div>
        </div>

        <!-- Grupos -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Grupos</h5>
                    <p class="card-text">Asignación y control de grupos de acceso.</p>
                    <a class="btn btn-outline-secondary w-100" asp-controller="Home" asp-action="Grupos">Ir a Grupos</a>
                </div>
            </div>
        </div>
    </div>
</div>
